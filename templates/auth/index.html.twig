{% extends 'base.html.twig' %}

{% block body %}
<div class="container is-max-desktop">
    <form action="{{ path('login') }}" method="post" class="section">
        <h1 class="title">Se connecter</h1>
        <div class="field">
            <label class="label">Email</label>
            <div class="control has-icons-left has-icons-right">
            {% if error %}
                <input name="email" class="input is-danger" type="email" placeholder="Email input" value="{{ last_username }}">
            {% else %}
                <input name="email" class="input" type="email" placeholder="Email input" value="">
            {% endif %}
                <span class="icon is-small is-left">
                    <i class="material-icons">email</i>
                </span>
            {% if error %}
                <span class="icon is-small is-right">
                    <i class="material-icons">warning</i>
                </span>
            {% endif %}
            </div>
            {% if error %}
                <p class="help is-danger">Les identifiants ne sont pas valides</p>
            {% endif %}
        </div>

        <div class="field">
            <label class="label">Password</label>
            <div class="control has-icons-left">
                <input name="password" class="input" type="password" placeholder="Text input">
                <span class="icon is-small is-left">
                    <i class="material-icons">lock</i>
                </span>
            </div>
        </div>

        <div class="field">
            <div class="control">
                <button type="submit" class="button is-link">Submit</button>
            </div>
        </div>
        {% if error %}
        <div class="notification is-danger">
            {{ error }}
        </div>
        {% endif %}
    </form>
</div>
{% endblock %}
