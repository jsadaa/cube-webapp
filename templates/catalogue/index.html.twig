{% extends 'base.html.twig' %}

{% block body %}
<nav class="level m-5 p-5 is-fixed-top">
    <div class="level-item">
        <p class="subtitle is-5">
            Filtrer par
        </p>
    </div>
    <div class="level-item">
        <div class="field has-addons">
            <div class="control">
                <div class="select">
                    <select id="appellation">
                        <option selected disabled>Appellation</option>
                        {% for appellation in appellations %}
                            <option>{{ appellation }}</option>
                        {% endfor %}
                        <option>Tous</option>
                    </select>
                </div>
            </div>
            <div class="control">
                <div class="select">
                    <select id="cepage">
                        <option selected disabled>Cepage</option>
                        {% for cepage in cepages %}
                            <option>{{ cepage }}</option>
                        {% endfor %}
                        <option>Tous</option>
                    </select>
                </div>
            </div>
            <div class="control">
                <div class="select">
                    <select id="region">
                        <option selected disabled>Region</option>
                        {% for region in regions %}
                            <option>{{ region }}</option>
                        {% endfor %}
                        <option>Tous</option>
                    </select>
                </div>
            </div>
            <div class="control">
                <div class="select">
                    <select id="famille">
                        <option selected disabled>Famille</option>
                        {% for famille in famillesProduits %}
                            <option>{{ famille.getNom() }}</option>
                        {% endfor %}
                        <option>Tous</option>
                    </select>
                </div>
            </div>
            <div class="control">
                <div class="select">
                    <select id="fournisseur">
                        <option selected disabled>Fournisseur</option>
                        {% for fournisseur in fournisseurs %}
                            <option>{{ fournisseur }}</option>
                        {% endfor %}
                        <option>Tous</option>
                    </select>
                </div>
            </div>
            <p class="control">
                <button id="filter-button" class="button is-dark">
                    Filtrer
                </button>
            </p>
            <p class="control">
                <button id="reset-button" class="button">
                <i class="material-icons">refresh</i>
                </button>
            </p>
        </div>
    </div>
</nav>
<section id="produits" class="fixed-grid has-3-cols p-6">
    <div class="grid">
    {% for produit in produits %}
        <div class="card container m-3 cell">
            <div>
                <div class="card-image">
                    <figure class="image p-5">
                        <img class="" src="{{ asset('img/' ~ produit.getNomImage()) }}" alt="Placeholder image">
                    </figure>
                </div>
                <div class="card-content">
                    <div class="content">
                        <p class="title is-4">{{ produit.getNom() }}</p>
                        <ul>
                            <li class="appellation">
                                <strong>Appelation:</strong> <span class="value">{{ produit.getAppellation() }} </span>
                            </li>
                            <li class="cepage">
                                <strong>Cepage:</strong> <span class="value">{{ produit.getCepage() }} </span>
                            </li>          
                            <li class="region">
                                <strong>Region:</strong> <span class="value">{{ produit.getRegion() }} </span>
                            </li>
                            <li class="famille">
                                <strong>Famille:</strong> <span class="value">{{ produit.getFamilleProduitNom() }} </span>
                            </li>
                            <li class="fournisseur">
                                <strong>Fournisseur:</strong> <span class="value">{{ produit.getFournisseurNom() }} </span>
                            </li>
                            <li class="prix">
                                <strong>Prix:</strong> <span class="value">{{ produit.getPrixVente() }} â‚¬</span>
                            </li>
                            <li class="stock">
                                <strong>Statut:</strong> <span class="value">{{ produit.getStock().getStatut() }}</span>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
            <hr>
            <div class="columns m-3">
                <div class="column is-one-third">
                    <a href="{{ path('catalogue_produit', {'id': produit.getId()}) }}" class="button is-dark m-2">
                        <i class="material-icons mr-2">info</i>
                        <span class="is-size-6">Details</span>
                    </a>
                </div>
                {% if app.user %}
                    <form action="{{ path('ajouter_panier', {'id': produit.getId()}) }}" method="post">
                        <div class="column field has-addons">
                            <div class="control">
                                <input type="number" name="quantite" class="input m-2" id="quantity-{{ produit.getId() }}" value="1" min="1" max="100">
                            </div>
                            <div class="control">
                                <button type="submit" class="button is-success m-2">
                                    <i class="material-icons mr-2">add_shopping_cart</i>
                                    <span class="is-size-6">Ajouter au panier</span>
                                </button>
                            </div>
                        </div>
                    </form>
                {% endif %}
            </div>
        </div>
    {% endfor %}
    </div>
</section>
{% endblock %}
