{% extends 'base.html.twig' %}

{% block body %}
    <section class="section">
        <div class="container">
            <h1 class="title">{{ produit.getNom() }}</h1>
            <div class="columns">
                <div class="column is-one-third" style="max-width: 30%">
                    {% set randomImage = 'p-' ~ random(1, 5) ~ '.webp' %}
                    <img src="{{ asset('img/' ~ randomImage) }}" alt="{{ produit.getNom() }}" class="image">
                </div>
                <div class="column content is-half">
                    <h2 class="title is-4">Fiche produit</h2>
                    <p><strong>Appellation</strong> : {{ produit.getAppellation() }}</p>
                    <p><strong>Cepage</strong> : {{ produit.getCepage() }}</p>
                    <p><strong>Famille</strong> : {{ produit.getFamilleProduitNom() }}</p>
                    <p><strong>Fournisseur</strong> : {{ produit.getFournisseurNom() }}</p>
                    <p><strong>Region</strong> : {{ produit.getRegion() }}</p>
                    <p><strong>Annee</strong> : {{ produit.getAnnee() }}</p>
                    <p><strong>Degré</strong> : {{ produit.getDegreAlcool() }}</p>
                    <p><strong>Prix</strong> : {{ produit.getPrixVente() }} €</p>
                    <p><strong>Date de péremption</strong> : {{ produit.getDatePeremption()|date('d/m/Y') }}</p>
                    <p><strong>Notre avis</strong> :</p>
                    <blockquote>{{ produit.getDescription() }}</blockquote>
                    {% if produit.estEnPromotion() %}
                        <p><strong>Promotion : <span class="tag is-danger"><i class="material-icons">local_offer</i></span></p>
                    {% endif %}
                    {% if app.user %}
                        <a href="{{ path('home', {'id': produit.getId()}) }}" class="button is-success is-medium m-2">
                            <i class="material-icons mr-2">add_shopping_cart</i>
                            <span class="is-size-6" >Ajouter au panier</span>
                        </a>
                    {% endif %}
                    <a href="{{ path('catalogue') }}" class="button is-info is-medium m-2">
                        <i class="material-icons mr-2">arrow_back</i>
                        <span class="is-size-6" >Retour au catalogue</span>
                    </a>
                </div>
            </div>
        </div>
    </section>
{% endblock %}
