{% extends 'base.html.twig' %}

{% block body %}
<div class="container is-max-desktop">
    <form action="{{ path('register_submit') }}" method="post" class="section">
        <h1 class="title">Inscription</h1>

        <div class="field">
            <label class="label">Email</label>
            <div class="control has-icons-left">
                <input name="email" class="input" type="email" placeholder="Email">
                <span class="icon is-small is-l// using bulma css a page confirming registration and a link to login page
eft">
                    <i class="material-icons">email</i>
                </span>
            </div>
        </div>

        <div class="field">
            <label class="label">Nom</label>
            <div class="control has-icons-left">
                <input name="nom" class="input" type="text" placeholder="Nom">
                <span class="icon is-small is-left">
                    <i class="material-icons">person</i>
                </span>
            </div>
        </div>

        <div class="field">
            <label class="label">Prénom</label>
            <div class="control has-icons-left">
                <input name="prenom" class="input" type="text" placeholder="Prénom">
                <span class="icon is-small is-left">
                    <i class="material-icons">person</i>
                </span>
            </div>
        </div>

        <div class="field">
            <label class="label">Date de naissance</label>
            <div class="control has-icons-left">
                <input name="date_naissance" class="input" type="date" placeholder="Date de naissance">
                <span class="icon is-small is-left">
                    <i class="material-icons">date_range</i>
                </span>
            </div>
        </div>

        <div class="field">
            <label class="label">Adresse</label>
            <div class="control has-icons-left">
                <input name="adresse" class="input" type="text" placeholder="Adresse">
                <span class="icon is-small is-left">
                    <i class="material-icons">home</i>
                </span>
            </div>
        </div>

        <div class="field">
            <label class="label">Code postal</label>
            <div class="control has-icons-left">
                <input name="code_postal" class="input" type="text" placeholder="Code postal">
                <span class="icon is-small is-left">
                    <i class="material-icons">location_on</i>
                </span>
            </div>
        </div>

        <div class="field">
            <label class="label">Ville</label>
            <div class="control has-icons-left">
                <input name="ville" class="input" type="text" placeholder="Ville">
                <span class="icon is-small is-left">
                    <i class="material-icons">location_city</i>
                </span>
            </div>
        </div>

        <div class="field">
            <label class="label">Pays</label>
            <div class="control has-icons-left">
                <input name="pays" class="input" type="text" placeholder="Pays">
                <span class="icon is-small is-left">
                    <i class="material-icons">public</i>
                </span>
            </div>
        </div>

        <div class="field">
            <label class="label">Téléphone</label>
            <div class="control has-icons-left">
                <input name="telephone" class="input" type="text" placeholder="Téléphone">
                <span class="icon is-small is-left">
                    <i class="material-icons">phone</i>
                </span>
            </div>
        </div>

        <div class="field">
            <label class="label">Mot de passe</label>
            <div class="control has-icons-left">
                <input name="password" class="input" type="password" placeholder="Mot de passe">
                <span class="icon is-small is-left">
                    <i class="material-icons">lock</i>
                </span>
            </div>
        </div>

        <hr>

        <div class="field">
            <div class="control">
                <button type="submit" class="button is-link">S'inscrire</button>
            </div>
        </div>
    </form>
</div>
{% endblock %}
